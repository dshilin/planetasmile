<h1>Добавить категорию</h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>
  
  <p>Укажите категорию<br/>
  	<%= f.text_field(:name) %>
  </p>
  
  <p>Выберите продавца<br/>
    <%= f.select :customer_id, Customer.all.collect {|t| [t.name, t.id]}, :required => true %>
  </p>
  	
  <p>	
    <%= f.submit "Добавить" %>
  </p>
<% end %>

<%= link_to 'Назад', categories_path %>
