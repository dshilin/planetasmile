<h1>Добавить customer</h1>

<% form_for :customer, :url => customers_path, :html => { :multipart => true } do |f| %>
  
  <%= f.error_messages %>
  
  <p><%= label_tag 'Путь к фото' %><br/>
  	<%= f.file_field :photo %>
  </p> 
    
  <p>Укажите название customer<br/>
  	<%= f.text_field(:name) %>
  </p>
  
  <p>Укажите описание<br/>
  	<%= f.text_area(:description) %>
  </p>
      
  <p>
    <%= f.submit "Добавить" %>
  </p>
<% end %>

<%= link_to 'Назад', customers_path %>